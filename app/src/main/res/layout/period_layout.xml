<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/paddingM"
    android:background="@drawable/rounded_box"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/paddingM">

        <ImageView
            android:layout_width="@dimen/iconL"
            android:layout_height="@dimen/iconL"
            android:background="@drawable/schedule" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/orange1"
            android:textStyle="bold"
            android:text="@string/period"
            android:layout_marginBottom="@dimen/paddingM"/>

        <Spinner
            android:id="@+id/periodLayoutSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/periodLayoutBtnAddPeriod"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/iconM"
            android:layout_height="@dimen/iconM"
            android:background="@drawable/add_period" />

    </LinearLayout>

</LinearLayout>