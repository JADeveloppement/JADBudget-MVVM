<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingM"
    android:orientation="vertical"
    tools:context=".ui.external.ManageExternalDatas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingVertical="@dimen/paddingM"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_box"
            android:layout_marginBottom="@dimen/paddingXL">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="@dimen/iconXL"
                    android:layout_height="@dimen/iconXL"
                    android:background="@drawable/database"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/external_datas"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/orange1"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/fragment_ManageExternalInvoiceTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/paddingM">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/invoices"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/orange1"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="@dimen/paddingM"
                        android:gravity="end|center_vertical">

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalPreviewInvoice"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/preview"
                            android:layout_marginEnd="@dimen/paddingM"/>

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalAddInvoice"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/add_element" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_ManageExternalRecyclerviewInvoices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paddingL"
                    android:padding="@dimen/paddingM"
                    android:background="@drawable/rounded_white_border_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_ManageExternalIncomesTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/paddingL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_ManageExternalInvoiceTile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/paddingM">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/income"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/orange1"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="@dimen/paddingM"
                        android:gravity="end|center_vertical">

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalPreviewIncome"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/preview"
                            android:layout_marginEnd="@dimen/paddingM"/>

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalAddIncome"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/add_element" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_ManageExternalRecyclerviewIncomes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paddingL"
                    android:padding="@dimen/paddingM"
                    android:background="@drawable/rounded_white_border_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_ManageExternalExpensesTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/paddingL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_ManageExternalIncomesTile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/paddingM">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/expenses"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/orange1"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="@dimen/paddingM"
                        android:gravity="end|center_vertical">

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalPreviewExpenses"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/preview"
                            android:layout_marginEnd="@dimen/paddingM"/>

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalAddExpenses"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/add_element" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_ManageExternalRecyclerviewExpenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paddingL"
                    android:padding="@dimen/paddingM"
                    android:background="@drawable/rounded_white_border_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_ManageExternalModelInvoiceTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/paddingL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_ManageExternalExpensesTile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/paddingM">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/model_invoice"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/orange1"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="@dimen/paddingM"
                        android:gravity="end|center_vertical">

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalPreviewModelInvoice"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/preview"
                            android:layout_marginEnd="@dimen/paddingM"/>

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalAddModelInvoice"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/add_element" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_ManageExternalRecyclerviewModelInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paddingL"
                    android:padding="@dimen/paddingM"
                    android:background="@drawable/rounded_white_border_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_ManageExternalModelIncomeTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/paddingL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_ManageExternalModelInvoiceTile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/paddingM">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="@string/model_income"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/orange1"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="@dimen/paddingM"
                        android:gravity="end|center_vertical">

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalPreviewModelIncome"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/preview"
                            android:layout_marginEnd="@dimen/paddingM"/>

                        <ImageButton
                            android:id="@+id/fragment_ManageExternalAddModelIncome"
                            android:layout_width="@dimen/iconM"
                            android:layout_height="@dimen/iconM"
                            android:background="@drawable/add_element" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_ManageExternalRecyclerviewModelIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paddingL"
                    android:padding="@dimen/paddingM"
                    android:background="@drawable/rounded_white_border_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_ManageExternalLoadingScreen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                android:gravity="center"
                android:alpha="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</ScrollView>