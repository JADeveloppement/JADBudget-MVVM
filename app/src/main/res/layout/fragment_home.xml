<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingM"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/add_element"
                android:textColor="@color/orange1"
                android:textStyle="bold"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/menuAddElementContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingM"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                app:flexWrap="wrap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/models"
                android:textColor="@color/orange1"
                android:textStyle="bold"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/menuModelsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingM"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                app:flexWrap="wrap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/gestion"
                android:textColor="@color/orange1"
                android:textStyle="bold"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/menuManageDatasContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingM"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                app:flexWrap="wrap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/import_export_data"
                android:textColor="@color/orange1"
                android:textStyle="bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingM"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:id="@+id/menuManageImportExportLoginStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/paddingM"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/iconS"
                            android:layout_height="@dimen/iconS"
                            android:background="@drawable/check"
                            android:layout_marginEnd="@dimen/paddingM"/>

                        <TextView
                            android:id="@+id/menuManageImportExportLoginTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ConnectÃ© en tant que Jalal"/>

                    </LinearLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/menuManageImportExportContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap="wrap" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/menuManageImportExportLoadingScreen"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="#E0FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
</ScrollView>