<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingM"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/add_element"
                android:textColor="@color/orange1"
                android:textStyle="bold"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/menuAddElementContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingM"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                app:flexWrap="wrap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/models"
                android:textColor="@color/orange1"
                android:textStyle="bold"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/menuModelsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingM"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                app:flexWrap="wrap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/gestion"
                android:textColor="@color/orange1"
                android:textStyle="bold"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/menuManageDatasContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingM"
                android:padding="@dimen/paddingM"
                android:background="@drawable/rounded_box"
                app:flexWrap="wrap"/>

        </LinearLayout>
</ScrollView>